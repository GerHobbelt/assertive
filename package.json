{
  "name": "assertive",
  "version": "2.0.2",
  "author": "Johan Sundstr√∂m <jsundstrom@groupon.com>",
  "contributors": [
    "Sean Massa <smassa@groupon.com>"
  ],
  "description": "Assertive is a terse yet expressive assertion library, designed and ideally suited for coffee-script",
  "repository": {
    "type": "git",
    "url": "git://github.com/groupon/assertive"
  },
  "main": "lib/assertive.js",
  "scripts": {
    "build": "rm -rf lib && coffee -cbo lib src",
    "watch": "coffee -wcbo lib src & nodemon -w src -w test -e coffee,js,json -x 'npm run test-run'",
    "pretest": "npm run build",
    "test": "npm run test-run",
    "posttest": "npub verify",
    "test-run": "coffeelint src test && mocha"
  },
  "dependencies": {
    "lodash": "^3.10.1"
  },
  "devDependencies": {
    "coffee-script": "1.9.3",
    "coffeelint": "^1.10.1",
    "coffeelint-use-strict": "0.0.1",
    "mocha": "^2.2.5",
    "nodemon": "^1.3.7",
    "npub": "^2.2.0"
  },
  "engines": {
    "node": ">=0.8"
  },
  "publishConfig": {
    "license": {
      "exclude": [
        "."
      ]
    }
  }
}
